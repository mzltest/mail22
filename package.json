{
  "name": "begin-app",
  "version": "0.0.0",
  "description": "Begin basic CRUD app",
  "arc": {
    "app": "crud-app",
    "aws": {
      "timeout": 300
    },
    "http": [
      {
        "/auth_request": {
          "method": "get",
          "src": "/authreq"
        }
      },
      {
        "/auth": {
          "method": "post",
          "src": "/gettoken"
        }
      },
      {
        "/tg": {
          "method": "post",
          "src": "/tg-callback"
        }
      },
      {
        "/mshook": {
          "method": "post",
          "src": "/mswebhook"
        }
      }
    ],
    "tables": [
      {
        "data": {
          "scopeID": "*String",
          "dataID": "**String",
          "ttl": "TTL"
        }
      }
    ],
    "scheduled": {
      "update_webhook": {
        "rate": "rate(1 day)"
,
                "src": "/update_webhook"
      }
    }
  },
  "scripts": {
    "start": "npx sandbox"
  },
  "dependencies": {
    "@architect/functions": "^4.0.0",
    "@architect/sandbox": "^4.5.2",
    "@begin/data": "^3.0.0",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "escape-html": "^1.0.3",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.7",
    "node-telegram-bot-api": "^0.59.0",
    "tiny-json-http": "^7.3.0"
  }
}
